{
  "manifest_version": 3,
  "name": "TheAltText â€” Alt Text Generator",
  "version": "1.0.0",
  "description": "AI-powered alt text generator for ADA/WCAG compliance. Right-click any image to generate accessible alt text. By GlowStarLabs.",
  "permissions": ["activeTab", "contextMenus", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TheAltText"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
